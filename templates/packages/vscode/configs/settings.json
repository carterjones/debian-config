{
  "editor.fontFamily": "Hack",
  "editor.formatOnSave": true,
  "editor.rulers": [80, 100, 120],
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "python.linting.pep8Args": ["--max-line-length=100"],
  "python.linting.pep8Enabled": true,
  "python.pythonPath": "${env:HOME}/.pyenv/versions/3.6.5/bin/python",
  "shellcheck.executablePath": "/usr/local/bin/shellcheck",
  "shellcheck.exclude": ["SC1091"],
  "todohighlight.include": [
    "**/*.js",
    "**/*.txt",
    "**/*.md",
    "**/*.html",
    "**/*.go",
    "**/*.sh"
  ],
  "todohighlight.isCaseSensitive": true,
  "todohighlight.isEnable": true,
  "todohighlight.keywordsPattern": "TODO|DEBUG|FIXME|[Oo]bviously|[Bb]asically|[Ss]imply|[Oo]f course|[Cc]learly|[Ee]veryone knows|[Ee]asy",
  "window.restoreWindows": "all",
  "window.zoomLevel": 0,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Monokai"
}
