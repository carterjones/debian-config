{
  "editor.fontFamily": "Hack",
  "editor.formatOnSave": true,
  "editor.rulers": [79, 99],
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "gitlens.codeLens.enabled": false,
  "keyboard.touchbar.enabled": false,
  "prettier.arrowParens": "always",
  "prettier.trailingComma": "es5",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.pep8Args": ["--max-line-length=100"],
  "python.linting.pep8Enabled": true,
  "python.pythonPath": "${env:HOME}/.pyenv/versions/3.6.5/bin/python",
  "shellcheck.executablePath": "/usr/local/bin/shellcheck",
  "shellcheck.exclude": ["SC1091"],
  "terraform.indexing": {
    "enabled": false,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [".terraform/**/*", "**/.terraform/**/*"]
  },
  "terraform.languageServer": {
    "enabled": true,
    "args": []
  },
  "todohighlight.include": [
    "**/*.js",
    "**/*.txt",
    "**/*.md",
    "**/*.html",
    "**/*.go",
    "**/*.sh"
  ],
  "todohighlight.isCaseSensitive": true,
  "todohighlight.isEnable": true,
  "todohighlight.keywordsPattern": "[Oo]bviously|[Bb]asically|[Ss]imply|[Oo]f course|[Cc]learly|[Ee]veryone knows|[Ee]asy|[Ee]asily",
  "window.restoreWindows": "all",
  "window.zoomLevel": 0,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Monokai"
}
