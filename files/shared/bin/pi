#!/bin/bash
set -eu -o pipefail

source $HOME/.secret

project_id=$(curl -s -X GET \
                  -H "X-TrackerToken: $PIVOTAL_TOKEN" \
                  "https://www.pivotaltracker.com/services/v5/projects" | \
                 jq '.[] | select(.name | contains("Security")) | .id')

curl -s -X GET \
     -H "X-TrackerToken: $PIVOTAL_TOKEN" \
     --data-urlencode "query=owner:cj AND state:started" \
     "https://www.pivotaltracker.com/services/v5/projects/${project_id}/search"
