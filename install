#!/bin/bash
set -euxo pipefail

os="???"

if [[ $(uname) == "Darwin" ]]; then
    os="mac"
elif [[ -f /etc/manjaro-release ]]; then
    os="manjaro"
elif [[ -f /etc/arch-release ]]; then
    os="arch"
elif [[ -f /etc/centos-release ]]; then
    os="centos"
elif grep -q Ubuntu /etc/lsb-release; then
    os="ubuntu"
fi

if [[ "${os}" == "???" ]]; then
    echo "unsupported operating system. bye."
    exit 1
fi

if [ ! "$(command -v git)" ]; then
    if [[ "${os}" == "mac" ]]; then
        brew install -y git
    elif [[ "${os}" == "arch" ]] || [[ "${os}" == "manjaro" ]]; then
        sudo pacman -Syu git
    elif [[ "${os}" == "centos" ]]; then
        sudo yum install -y git
    elif [[ "${os}" == "ubuntu" ]]; then
        sudo apt-get update
        sudo DEBIAN_FRONTEND=noninteractive apt-get install -y git
    fi
fi

if [ ! "$(command -v curl)" ]; then
    if [[ "${os}" == "ubuntu" ]]; then
        sudo apt-get update
        sudo DEBIAN_FRONTEND=noninteractive apt-get install -y curl
    fi
fi

if [ ! "$(command -v go)" ]; then
    if [[ "${os}" == "mac" ]]; then
        brew install -y go
    elif [[ "${os}" == "arch" ]] || [[ "${os}" == "manjaro" ]]; then
        sudo pacman --noconfirm -Syu go
    else
        ./templates/packages/go/linux.sh
    fi
fi

echo "building for ${os}"
go build -o ./bin/cfg ./cmd/cfg
echo "done"

./bin/cfg

# Run a custom installer if one has been created.
if [[ -f "${HOME}/bin/install-custom-config" ]]; then
    "${HOME}/bin/install-custom-config"
fi
